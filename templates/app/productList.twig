{% extends 'layout.twig' %}

{% block title %}{{ parent() }} | Product Status{% endblock %}
{% block body %}
<table id="pink">
    <td><h2>Product Status</h2>
        <form action="{{ path_for('searchP') }}" method="POST">
            {{ csrf() }}
            <input type="text" name="search" placeholder="Search.."><input type="submit" name="" value="Submit">
        </form>

        <br><br>
        <table bgcolor="white">
            <tr>
                <th>No.</th>
                <th>Customer Name</th>
                <th>Brand</th>
                <th>Repair ID</th>
                <th>Repaired on</th>
                <th>Status</th>
            </tr>

            <tr>
                {% for product in products %}
                <td>{{ loop.index }}</td>
                <td><a href="{{ path_for('view',{ id: product.user_id }) }}">{{ product.name }}</a></td>
                <td>{{ product.brand }}</td>
                <td>{{ product.model }}</td>
                {% if product.status == 1 %}
                    <td>{{ product.updated_at | date("d/m/Y" , "Asia/Kuala_Lumpur") }}</td>
                    <td><a id="done" href="{{ path_for('updateStatus',{id: product.id }) }}">Done</a></td>
                {% else %}
                    <td id="process"> In progress </td>
                    <td><a href="{{ path_for('updateStatus',{id: product.id}) }}">Pending</a></td>
                {% endif %}
            </tr>
            {% else %}
                <td colspan="6">There are no product here :( {{ product.brand }}</td>
            {% endfor %}
        </table>
    </td>
</table>
{% endblock %}