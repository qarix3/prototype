{% extends 'layout.twig' %}

{% block title %}{{ parent() }} | New Repair{% endblock %}
{% block body %}

<table id="pink">
    <td>
        <h2>New Repair</h2>
        <form action="{{ path_for('repairWithCustomer',{user_id: id}) }}" method="POST">
            <table bgcolor="white" border="0">
                <tr>
                    <th colspan="2"></th>
                </tr>
                <tr>
                    <td>Customer ID</td>
                    <td><input type="text" name="user_id" id="id" value="{{ id.id }}"></td>
                </tr>
                <tr>
                    <td>Brand</td>
                    <td><input type="text" name="brand" id="brand"></td>
                </tr>
                <tr>
                    <td>Model</td>
                    <td><input type="text" name="model" id="model"></td>
                </tr>
                <tr>
                    <td>Date Send</td>
                    <td><input type="text" name="created_at" id="" value="{{ "now"|date("d/m/Y" , "Asia/Kuala_Lumpur") }}"></td>
                </tr>
                <tr>
                    {{ csrf() }}
                    <td colspan="2"><input type="submit" name="" value="Submit"><input type="reset" name=""value="Cancel"></td>
                </tr>
            </table>
        </form>
    </td>
</table>
{% endblock %}