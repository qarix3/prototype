{% extends 'layout.twig' %}
{% block body %}

<table id="pink">
<td><h2>Status Update</h2>
    <form action="{{ path_for('update',{id:technician.id}) }}" method="POST">
        <table border="0" bgcolor="white">
            <tr>
                <th colspan="2"></th>
            </tr>
            <tr>
                <td>Brand</td>
                <td>{{ technician.brand }}</td>
            </tr>
            <tr>
                <td>Model</td>
                <td>{{ technician.model }}</td>
            </tr>
            <tr>
                <td>Date send</td>
                <td>{{ technician.created_at | date("d/m/Y" , "Asia/Kuala_Lumpur") }}</td>
            </tr>


            {% if technician.status == 1 %}
                <tr>
                    <td>Date finished</td>
                    <td>{{ technician.finished_date | date("d/m/Y" , "Asia/Kuala_Lumpur") }}</td>
                </tr>
                <tr>
                    <td>Status</td>
                    <td><span id="done" >Done</span></td>
                </tr>
            {% else %}
                <tr>
                    <td>Date finished</td>
                    <td><input type="text" name="" id="" value=" {{ "now"|date("m/d/Y") }}"></td>
                </tr>
                <tr>
                    <td>Status</td>
                    <td><span id="process">In progress</span></td>
                </tr>
            {% endif %}

            <tr>
                <td>Technician</td>
                <td>{{ technician.name }}</td>
            </tr>
            <tr>
                <td>Status</td>
                <td><select name="" id="">
                        <option value="1">Ready</option>
                        <option value="0">Not Ready</option>
                    </select></td>
            </tr>
            <tr>
                <input type="hidden" name="id" id="" value="{{ technician.id }}"/>
                <input type="hidden" name="finished_date" id="" value="{{ technician.finished_date }}"/>
                <input type="hidden" name="status" id="" value="{{ technician.status }}"/>
                <input type="hidden" name="staff_id" id="" value="{{ technician.staff_id }}"/>
                <input type="hidden" name="product_id" id="" value="{{ technician.product_id }}"/>

                {{ csrf() }}
                <input type="hidden" name="_METHOD" value="PUT"/>
                <td colspan="2"><a href="{{ path_for('update',{id: technician.id  }) }} ">Edit </a>
                    <input type="submit" name=""value="Update"></td>
            </tr>
            </tr>
        </table>
    </form>
</td>
</table>
{% endblock %}